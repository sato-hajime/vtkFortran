<?xml version="1.0"?>
<parsers>

  <Or name="literal">
    <Ref target="floating-literal"/>
    <Ref target="integer-literal"/>
    <Ref target="pointer-literal"/>
  </Or>

  <And name="integer-literal">
    <Or>
      <Ref target="decimal-literal"/>
      <Ref target="octal-literal"/>
      <Ref target="hexadecimal-literal"/>
    </Or>
  </And>

  <Regex name="decimal-literal"
	 >[1-9][0-9]*</Regex>
  <Regex name="octal-literal"
	 >0[0-7]*</Regex>
  <Regex name="hexadecimal-literal"
	 >0[xX][0-9a-fA-F]*</Regex>

  <And name="floating-literal">
    <Or>
      <And>
	<!-- fractional-constant -->
	<Regex>([0-9]*\.[0-9]+)|([0-9]+\.)</Regex>
	<Optional>
	  <Ref target="exponent-part"/>
	</Optional>
      </And>
      <And>
	<!-- digit-sequence -->
	<Regex>[0-9]+</Regex>
	<Ref target="exponent-part"/>
      </And>
    </Or>
    <!-- floating-suffix -->
    <Optional>
      <Regex>[fFlL]</Regex>
    </Optional>
  </And>

  <Regex name="exponent-part"
	 >[eE][+-]?[0-9]+</Regex>
  
  <Or name="pointer-literal">
    <Literal>nullptr</Literal>
  </Or>
  
</parsers>
