<?xml version="1.0"?>
<parsers>

  <And name="type-specifier-seq">
    <Ref target="type-specifier"/>
    <ZeroOrMore>
      <Ref target="type-specifier"/>
    </ZeroOrMore>
    <!-- <Optional> -->
    <!--   <Ref target="attribute-specifier-seq"/> -->
    <!-- </Optional> -->
  </And>

  <Or name="type-specifier">
    <Ref target="trailing-type-specifier"/>
    <!-- <Ref target="class-specifier"/> -->
  </Or>
  
  <Or name="trailing-type-specifier">
    <Ref target="simple-type-specifier"/>
    <!-- <Ref target="elaborated-type-specifier"/> -->
    <!-- <Ref target="typename-specifier"/> -->
    <Ref target="cv-qualifier"/>
  </Or>
  
  <Or name="simple-type-specifier">
    <And>
      <Optional>
	<Literal>::</Literal>
      </Optional>
      <Optional>
      	<Ref target="nested-name-specifier"/>
      </Optional>
      <Ref target="type-name"/>
    </And>
    <Literal>char</Literal>
    <Literal>bool</Literal>
    <Literal>int</Literal>
    <Literal>long</Literal>
    <Literal>signed</Literal>
    <Literal>unsigned</Literal>
    <Literal>float</Literal>
    <Literal>double</Literal>
    <Literal>void</Literal>
    <And>
      <Literal>unsigned</Literal>
      <Literal>int</Literal>
    </And>
  </Or>

  <Or name="type-name">
    <Ref target="simple-template-id"/>
    <Ref target="class-name"/>
    <!-- <Ref target="enum-name"/> -->
    <!-- <Ref target="typedef-name"/> -->
  </Or>
  
  <Or name="class-name">
    <Ref target="identifier"/>
  </Or>
  
</parsers>
